{% extends 'base.html.twig' %}

{% block title %}Sign In{% endblock %}

{% block body %}
    <style>

    </style>

    <div class="w-screen h-screen flex flex-col justify-evenly items-center">

        <h1 class="text-5xl">Create your Quack account ! ðŸ¦†</h1>

        <div class="flex flex-col w-1/3 h-2/4 justify-between">
            {{ form_start(form, { 'attr': {'class': 'flex flex-col w-full h-full justify-between'}}) }}
                <div class="flex flex-col justify-between h-14">
                    {{ form_label(form.firstname) }}

                    {{ form_widget(form.firstname, { 'attr': {'class': 'h-7 rounded'}}) }}
                </div>

                <div class="flex flex-col justify-between h-14">
                    {{ form_label(form.lastname) }}

                    {{ form_widget(form.lastname, { 'attr': {'class': 'h-7 rounded'}}) }}
                </div>

                <div class="flex flex-col justify-between h-14">
                    {{ form_label(form.duckname) }}

                    {{ form_widget(form.duckname, { 'attr': {'class': 'h-7 rounded'}}) }}
                </div>

                <div class="flex flex-col justify-between h-14">
                    {{ form_label(form.email) }}

                    {{ form_widget(form.email, { 'attr': {'class': 'h-7 rounded'}}) }}
                </div>

                <div class="flex flex-col justify-between h-14">
                    {{ form_label(form.password) }}

                    {{ form_widget(form.password, { 'attr': {'class': 'h-7 rounded'}}) }}
                </div>

                <div class="flex justify-center">
                    {{ form_widget(form.save, { 'attr': {'class': 'btn btn-secondary text-white'}}) }}
                </div>

            {{ form_end(form) }}

        </div>







